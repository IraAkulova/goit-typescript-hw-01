{
  "compilerOptions": {
    "rootDir": "./src", 
    "outDir": "./dist", 
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["**/*.ts"]
}